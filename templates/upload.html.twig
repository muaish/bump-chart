<!DOCTYPE html>
<html>
<head>
    <title>Upload File</title>
</head>
<body>

{% block content %}
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <h1 class="text-center">File Upload</h1>
        <p class="text-center">Upload a file below.</p>

        {{ form_start(form, { attr: { 'accept-charset' : 'utf-8' }}) }}

        <div class="form-group">
          <label for="{{ form.upload_file.vars.id }}" class="control-label">Choose a file:</label>
          {{ form_widget(form.upload_file, { 'attr': { 'class': 'form-control' } }) }}
          <small class="form-text text-muted">Supported file types: .xlsx</small>
          {{ form_errors(form.upload_file) }}
        </div>

        <div class="form-group text-center">
          {{ form_widget(form.send, {'label': "Upload File", 'attr' : { 'class': 'btn btn-primary' } }) }}
        </div>

        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}

</body>
</html>